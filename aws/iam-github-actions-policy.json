{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "ECRPushAndPull",
      "Effect": "Allow",
      "Action": [
        "ecr:GetAuthorizationToken",
        "ecr:GetDownloadUrlForLayer",
        "ecr:PutImage",
        "ecr:InitiateLayerUpload",
        "ecr:UploadLayerPart",
        "ecr:CompleteLayerUpload",
        "ecr:DescribeRepositories",
        "ecr:ListImages"
      ],
      "Resource": "arn:aws:ecr:YOUR_REGION:YOUR_AWS_ACCOUNT_ID:repository/imdb-scraper"
    },
    {
      "Sid": "ECSRunTask",
      "Effect": "Allow",
      "Action": [
        "ecs:RunTask",
        "ecs:DescribeTasks",
        "ecs:DescribeTaskDefinition"
      ],
      "Resource": [
        "arn:aws:ecs:YOUR_REGION:YOUR_AWS_ACCOUNT_ID:task/imdb/*",
        "arn:aws:ecs:YOUR_REGION:YOUR_AWS_ACCOUNT_ID:task-definition/imdb-scraper:*"
      ]
    },
    {
      "Sid": "PassTaskRole",
      "Effect": "Allow",
      "Action": [
        "iam:PassRole"
      ],
      "Resource": "arn:aws:iam::YOUR_AWS_ACCOUNT_ID:role/ecsTaskRole-imdb-scraper"
    }
  ]
}
